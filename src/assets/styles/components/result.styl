  display flex
  &>.ya-share2__item_service_facebook>.ya-share2__link>.ya-share2__badge>.ya-share2__icon
    background-image url('/icons/svg/fb.svg') 
    background-position: center
    background-repeat no-repeat
    background-size: 13rem
    @media $mobile
      background-size: unset
  &>.ya-share2__item_service_twitter>.ya-share2__link>.ya-share2__badge>.ya-share2__icon
    background-image url('/icons/svg/twitter.svg')
    background-position: center
    background-repeat no-repeat
    background-size: 22rem
    @media $mobile
      background-size: unset
  &>.ya-share2__item_service_vkontakte>.ya-share2__link>.ya-share2__badge>.ya-share2__icon
    background-image url('/icons/svg/vk.svg')
    background-position: center
    background-repeat no-repeat
    background-size: 20rem
    @media $mobile
      background-size: unset
  &>.ya-share2__item
    df(center, center)
    mr(24rem)
    w(57rem)
    h(57rem)
    border-radius 50%
    border 1px solid $aquaBlue
    background-image linear-gradient(white, white)
    background-size 0% 0%
    background-position 50% 50%
    transition 0.3s
    background-repeat no-repeat
    cursor pointer
    &>.ya-share2__link>.ya-share2__badge
      background: none
